<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Search Results</title>

    <meta name="viewport"
          content="width=device-width,initial-scale=1.0,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no">
    <link rel='stylesheet' href='/stylesheets/style.css'/>
    <link rel="stylesheet" href="/stylesheets/bootstrap.min.css">
    <link rel="stylesheet" href="/stylesheets/responsivetypography.css">
    <link rel="stylesheet" href="/stylesheets/customizeStyle.css">

    <script src="/javascripts/jquery-3.4.0.min.js"></script>
    <script src="/javascripts/bootstrap.min.js"></script>
    <script src="/javascripts/popper.min.js"></script>

    <script src="/javascripts/jobResultsJS.js"></script>

</head>
<body class="customize-body">
<%- include header.ejs -%>
<div class="container" style="margin-top:30px">
    <div class="row">
        <!--filter-->
        <div class="col-sm-4">
            <div class="jumbotron">
                <div class="container">
                    <h1 class="display-4">Filter</h1>
                    <form action="" id="secondarySearch">
                        <!--secondary search bar-->
                        <div class="form-group">
                            <label for="keyword">Keywords</label>
                            <input type="text" class="form-control" name="keyword"
                                   placeholder="job title, company name, job type" value="<%= keyword %>">
                            <label for="keyword">Location</label>
                            <input type="text" class="form-control" name="location"
                                   placeholder="city,postcode" value="<%= location %>">
                        </div>
                        <div class="accordion" id="secondarySearch">
                            <!--salary-->
                            <div class="card">
                                <div class="card-header" id="salaryCollapse">
                                    <h2 class="mb-0">
                                        <button class="btn btn-link collapsed" type="button" data-toggle="collapse"
                                                data-target="#collapseSalary" aria-expanded="true"
                                                aria-controls="collapseSalary">
                                            Salary
                                        </button>
                                    </h2>
                                </div>

                                <div id="collapseSalary" class="collapse" aria-labelledby="salaryCollapse">
                                    <div class="card-body">
                                        <div class="custom-control custom-radio">
                                            <input type="radio" class="custom-control-input" id="salary3000More"
                                                   name="salary" value="4">
                                            <label class="custom-control-label" for="salary3000More">£3000+</label>
                                        </div>
                                        <div class="custom-control custom-radio">
                                            <input type="radio" class="custom-control-input" id="salary2000To3000"
                                                   name="salary" value="3">
                                            <label class="custom-control-label"
                                                   for="salary2000To3000">£2000-£3000</label>
                                        </div>
                                        <div class="custom-control custom-radio">
                                            <input type="radio" class="custom-control-input" id="salary1000To2000"
                                                   name="salary" value="2">
                                            <label class="custom-control-label"
                                                   for="salary1000To2000">£1000-£2000</label>
                                        </div>
                                        <div class="custom-control custom-radio">
                                            <input type="radio" class="custom-control-input" id="salary0To1000"
                                                   name="salary" value="1">
                                            <label class="custom-control-label" for="salary0To1000">£0-£1000</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!--industry-->
                            <div class="card">
                                <div class="card-header" id="industryCollapse">
                                    <h2 class="mb-0">
                                        <button class="btn btn-link collapsed" type="button" data-toggle="collapse"
                                                data-target="#collapseIndustry" aria-expanded="false"
                                                aria-controls="collapseIndustry">
                                            Industry
                                        </button>
                                    </h2>
                                </div>
                                <div id="collapseIndustry" class="collapse" aria-labelledby="industryCollapse">
                                    <div class="card-body">
                                        <div class="custom-control custom-radio">
                                            <input type="radio" class="custom-control-input" id="industryEducation"
                                                   name="industry" value="Education">
                                            <label class="custom-control-label"
                                                   for="industryEducation">Education</label>
                                        </div>
                                        <div class="custom-control custom-radio">
                                            <input type="radio" class="custom-control-input" id="industryIt"
                                                   name="industry" value="IT">
                                            <label class="custom-control-label"
                                                   for="industryIt">IT</label>
                                        </div>
                                        <div class="custom-control custom-radio">
                                            <input type="radio" class="custom-control-input" id="industryAccounting"
                                                   name="industry" value="Accounting">
                                            <label class="custom-control-label"
                                                   for="industryAccounting">Accounting</label>
                                        </div>
                                        <div class="custom-control custom-radio">
                                            <input type="radio" class="custom-control-input" id="industryEnergy"
                                                   name="industry" value="Energy">
                                            <label class="custom-control-label"
                                                   for="industryEnergy">Energy</label>
                                        </div>
                                        <div class="custom-control custom-radio">
                                            <input type="radio" class="custom-control-input" id="industryAgriculture"
                                                   name="industry" value="Agriculture">
                                            <label class="custom-control-label"
                                                   for="industryAgriculture">Agriculture</label>
                                        </div>
                                        <div class="custom-control custom-radio">
                                            <input type="radio" class="custom-control-input" id="industryTransportation"
                                                   name="industry" value="Transportation">
                                            <label class="custom-control-label"
                                                   for="industryTransportation">Transportation</label>
                                        </div>
                                        <div class="custom-control custom-radio">
                                            <input type="radio" class="custom-control-input" id="industryRealEstate"
                                                   name="industry" value="Real Estate">
                                            <label class="custom-control-label"
                                                   for="industryRealEstate">Real Estate</label>
                                        </div>
                                        <div class="custom-control custom-radio">
                                            <input type="radio" class="custom-control-input" id="other"
                                                   name="industry" value="Other">
                                            <label class="custom-control-label"
                                                   for="other">Other</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!--job type-->
                            <div class="card">
                                <div class="card-header" id="jobTypeCollapse">
                                    <h2 class="mb-0">
                                        <button class="btn btn-link collapsed" type="button" data-toggle="collapse"
                                                data-target="#collapseJobType" aria-expanded="true"
                                                aria-controls="collapseJobType">
                                            Job Types
                                        </button>
                                    </h2>
                                </div>
                                <div id="collapseJobType" class="collapse" aria-labelledby="jobTypeCollapse"
                                     data-parent="#secondarySearch">
                                    <div class="card-body">
                                        <div class="custom-control custom-radio">
                                            <input type="radio" class="custom-control-input" id="jobTypeFullTime"
                                                   name="jobType" value="Full-Time">
                                            <label class="custom-control-label" for="jobTypeFullTime">Full-Time</label>
                                        </div>
                                        <div class="custom-control custom-radio">
                                            <input type="radio" class="custom-control-input" id="jobTypePartTime"
                                                   name="jobType" value="Part-Time">
                                            <label class="custom-control-label" for="jobTypePartTime">Part-Time</label>
                                        </div>
                                        <div class="custom-control custom-radio">
                                            <input type="radio" class="custom-control-input" id="jobTypeInternship"
                                                   name="jobType" value="Internship">
                                            <label class="custom-control-label"
                                                   for="jobTypeInternship">Internship</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!--Searching radio-->
                            <div class="card">
                                <div class="card-header" id="searchingRadioCollapse">
                                    <h2 class="mb-0">
                                        <button class="btn btn-link collapsed" type="button" data-toggle="collapse"
                                                data-target="#collapseSearchingRadio" aria-expanded="true"
                                                aria-controls="collapseSearchingRadio">
                                            Searching Radio
                                        </button>
                                    </h2>
                                </div>
                                <div id="collapseSearchingRadio" class="collapse" aria-labelledby="searchingRadioCollapse"
                                     data-parent="#secondarySearch">
                                    <div class="card-body">
                                        <div class="custom-control custom-radio">
                                            <input type="radio" class="custom-control-input" id="searchingRadioTen"
                                                   name="searchingRadio" value="10">
                                            <label class="custom-control-label" for="searchingRadioTen"><10km</label>
                                        </div>
                                        <div class="custom-control custom-radio">
                                            <input type="radio" class="custom-control-input" id="searchingRadioFive"
                                                   name="searchingRadio" value="5">
                                            <label class="custom-control-label" for="searchingRadioFive"><5km</label>
                                        </div>
                                        <div class="custom-control custom-radio">
                                            <input type="radio" class="custom-control-input" id="searchingRadioOne"
                                                   name="searchingRadio" value="1">
                                            <label class="custom-control-label"
                                                   for="searchingRadioOne"><1km</label>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                        <div class="row mt-2">
                            <div class="col text-center">
                                <button type="submit" class="btn btn-primary btn-lg btn-block">Refine</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!--searching result area-->
        <div class="col-sm-8" id="searchingResultDiv">
            <%
            if(jobResults.length != 0){
            %>
                <% jobResults.forEach(function(job){ %>
                <div class="card mb-2" id="jobResults">
                    <h5 class="card-header"><a href="/jobDetails?jobId=<%= job.id %>"><%= job.title %></a></h5>
                    <div class="card-body">
                        <h5 class="card-title">
                            <a href="/companyDetails?companyName=<%= job.companyName %>"><%= job.companyName %></a>
                        </h5>
                        <p class="font-weight-lighter font-italic"><%= job.city %></p>
                        <hr>
                        <p class="card-text d-none d-lg-block"><%= job.description %></p>
                        <p class="card-text">£<%= job.salary %> /Month</p>
                    </div>
                </div>
                <% }) %>
            <%
            } else {
            %>
                <div class="jumbotron jumbotron-fluid">
                    <div class="container text-center">
                        <h1 class="display-4">No Related Result! </h1>
                    </div>
                </div>
            <%
            }
            %>
        </div>
    </div>
</div>
<script>
    // Note: This example requires that you consent to location sharing when
    // prompted by your browser. If you see the error "The Geolocation service
    // failed.", it means you probably did not give permission for the browser to
    // locate you.
    var map, infoWindow;
    function initMap() {
        map = new google.maps.Map(document.getElementById('map'), {
            //set university as the center of map when initialize
            center: {lat: 53.380707, lng: -1.483981999999969},
            zoom: 12
        });


        infoWindow = new google.maps.InfoWindow;

        // Try HTML5 geolocation.
        if (navigator.geolocation) {
            navigator.geolocation.getCurrentPosition(function(position) {
                var pos = {
                    lat: position.coords.latitude,
                    lng: position.coords.longitude
                };
                console.log(pos);

                infoWindow.setPosition(pos);
                infoWindow.setContent('You are here.');
                infoWindow.open(map);
                map.setCenter(pos);
            }, function() {
                handleLocationError(true, infoWindow, map.getCenter());
            });

            //set location
            var jobOne = {lat: 53.3830004, lng: -1.477871499999992};
            //set content of pop out information panel
            var contentString = '<div id="content">'+
                '<div id="siteNotice">'+
                '</div>'+
                '<h1 id="firstHeading" class="firstHeading">Uluru</h1>'+
                '<div id="bodyContent">'+
                '<p>Attribution: Uluru, <a href="https://en.wikipedia.org/w/index.php?title=Uluru&oldid=297882194">'+
                '</div>'+
                '</div>';

            //set information panel
            var infowindow = new google.maps.InfoWindow({
                content: contentString,
                maxWidth: 200
            });

            //set marker on the map
            var markerOne = new google.maps.Marker({
                position: jobOne,
                map: map,
                title: 'Job One'
            });
            //set action when click
            markerOne.addListener('click', function() {
                infowindow.open(map, markerOne);
            });

            var jobTwo = {lat: 53.3848933, lng: -1.4817054000000098};
            var contentStringTwo = '<div id="content">'+
                '<div id="siteNotice">'+
                '</div>'+
                '<h1 id="firstHeading" class="firstHeading">Uluru</h1>'+
                '<div id="bodyContent">'+
                '<p>Attribution: Uluru, <a href="https://en.wikipedia.org/w/index.php?title=Uluru&oldid=297882194">'+
                'https://en.wikipedia.org/w/index.php?title=Uluru</a> '+
                '(last visited June 22, 2009).</p>'+
                '</div>'+
                '</div>';

            var infowindowTwo = new google.maps.InfoWindow({
                content: contentStringTwo,
                maxWidth: 200
            });

            var markerTwo = new google.maps.Marker({
                position: jobTwo,
                map: map,
                title: 'Job Two'
            });
            markerTwo.addListener('click', function() {
                infowindowTwo.open(map, markerTwo);
            });
        } else {
            // Browser doesn't support Geolocation
            handleLocationError(false, infoWindow, map.getCenter());
        }

    }

    function handleLocationError(browserHasGeolocation, infoWindow, pos) {
        infoWindow.setPosition(pos);
        infoWindow.setContent(browserHasGeolocation ?
            'Error: The Geolocation service failed.' :
            'Error: Your browser doesn\'t support geolocation.');
        infoWindow.open(map);
    }
</script>
</body>
</html>