<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1.0,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no" >

    <title>The Hunt</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" href="/stylesheets/bootstrap.min.css">
    <script src="/javascripts/jquery-3.4.0.min.js"></script>
    <script src="/javascripts/bootstrap.min.js"></script>
    <script src="/javascripts/popper.min.js"></script>
    <script src="/javascripts/index_js.js"></script>
  </head>
  <body>
  <!-- Button trigger modal -->
  <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#loginRegister">
    Login/Register
  </button>

  <!-- Modal -->
  <div class="modal fade" id="loginRegister" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <!-- Nav tabs -->
        <div class="modal-body">
          <!-- Nav pills -->
          <ul class="nav nav-pills nav-justified">
            <li class="nav-item">
              <a class="nav-link active" data-toggle="pill" href="#login">Login</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" data-toggle="pill" href="#register">Register</a>
            </li>
          </ul>

          <!-- Tab panes -->
          <div class="tab-content">
<!--            login-->
            <div class="tab-pane active container" id="login">
              <form id="login">
                <div class="form-group">
                  <label for="loginEmail1">Email address</label>
                  <input type="email" class="form-control" id="loginEmail1" name="loginEmail1" aria-describedby="emailHelp" placeholder="Enter email">
                </div>
                <div class="form-group">
                  <label for="loginPassword">Password</label>
                  <input type="password" class="form-control" id="loginPassword" name="loginPassword" placeholder="Password">
                </div>
                <div class="col text-center">
                  <button type="submit" class="btn btn-primary btn-block">LOGIN</button>
                  <br>
                  <input id="invalidUserMessage" value="invalid email address or password." style="display:none">
                  <br>
                  <a href="#" class="text-decoration-none">Forget Password?</a>
                </div>
              </form>
            </div>

<!--            register-->
            <div class="tab-pane container" id="register">
              <div class="accordion" id="accordionExample">
<!--                Consumer Register-->
                <div class="card">
                  <div class="card-header" id="headingTwo">
                    <h2 class="mb-0">
                      <button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                        Consumer Register
                      </button>
                    </h2>
                  </div>
                  <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionExample">
                    <div class="card-body">
                      <form name="consumerRegister">
                        <div class="form-group">
                          <label for="consumerFirstName">First Name</label>
                          <input type="email" class="form-control" id="consumerFirstName" placeholder="First Name">
                        </div>
                        <div class="form-group">
                          <label for="consumerLastName">Last Name</label>
                          <input type="email" class="form-control" id="consumerLastName" placeholder="Last Name">
                        </div>
                        <div class="form-group">
                          <label for="consumerEmail">Email address</label>
                          <input type="email" class="form-control" id="consumerEmail" placeholder="Email Address">
                        </div>
                        <div class="form-group">
                          <label for="consumerPassword">Password</label>
                          <input type="password" class="form-control" id="consumerPassword" placeholder="Password">
                        </div>
                        <div class="form-group">
                          <label for="consumerRepeatPassword">Password</label>
                          <input type="password" class="form-control" id="consumerRepeatPassword" placeholder="Repeat Password">
                        </div>
                        <div class="col text-center">
                          <button type="submit" class="btn btn-primary btn-block">REGISTER</button>
                        </div>
                      </form>
                    </div>
                  </div>
                </div>

<!--                Company Register-->
                <div class="card">
                  <div class="card-header" id="headingThree">
                    <h2 class="mb-0">
                      <button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                        Company Register
                      </button>
                    </h2>
                  </div>
                  <div id="collapseThree" class="collapse" aria-labelledby="headingThree" data-parent="#accordionExample">
                    <div class="card-body">
                      <form name="companyRegister">
                        <div class="form-group">
                          <label for="companyName">Company Name</label>
                          <input type="email" class="form-control" id="companyName" placeholder="Company Name">
                        </div>
                        <div class="form-group">
                          <label for="companyEmail">Email address</label>
                          <input type="email" class="form-control" id="companyEmail" placeholder="Email Address">
                        </div>
                        <div class="form-group">
                          <label for="companyPassword">Password</label>
                          <input type="password" class="form-control" id="companyPassword" placeholder="Password">
                        </div>
                        <div class="form-group">
                          <label for="companyRepeatPassword">Repeat Password</label>
                          <input type="password" class="form-control" id="companyRepeatPassword" placeholder="Repeat Password">
                        </div>
                        <div class="col text-center">
                          <button type="submit" class="btn btn-primary btn-block">REGISTER</button>
                        </div>
                      </form>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  </body>
</html>
