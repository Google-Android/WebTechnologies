<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport"
          content="width=device-width,initial-scale=1.0,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no">

    <title>Message Center</title>
    <link rel='stylesheet' href='/stylesheets/style.css'/>
    <link rel="stylesheet" href="/stylesheets/bootstrap.min.css">
    <link rel="stylesheet" href="/stylesheets/responsivetypography.css">

    <script src="/javascripts/jquery-3.4.0.min.js"></script>
    <script src="/javascripts/bootstrap.min.js"></script>
    <script src="/javascripts/popper.min.js"></script>
</head>
<body>
<%- include header.ejs -%>
<!-- Modal -->
<div class="modal fade" id="viewCvModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                ...
            </div>
        </div>
    </div>
</div>

<div class="jumbotron text-center">
    <h1 class="display-4">Notification Center</h1>
</div>

<div class="container" style="margin-top:30px">
    <div class="container">
        <%
        if(messages){
            messages.forEach(function (message) {
        %>
            <div class="alert alert-info alert-dismissible fade show" id="message1">
            <strong><a href="/personDetails?ownerId=<%=message.userId %>"><%=message.username %></a></strong>
            applied for the
            <a href="/jobDetails?jobId=<%=message.jobId %>">job</a>
            you posted, Click
            <a href="/cvDetails?operation=showOthersCv&cvId=<%=message.cvId %>">here</a>
            to view the CV!
            </div>
        <%
            })
        }else{
        %>
        <h2>No messages here.</h2>
        <%
        }
        %>





    </div>
</div>
</body>
</html>